<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"

    tools:context="com.example.abu_nadeem.myapplication.Main2Activity">
<ImageView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scaleType="centerCrop"
    android:src="@drawable/a1"
    android:alpha=".5"/>

    <LinearLayout
        android:id="@id/linear1"
        android:layout_width="wrap_content"
        android:weightSum="1"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_marginLeft="30dp"
        >

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"

            app:srcCompat="@drawable/gallery_96px"
            tools:ignore="ContentDescription"
            />
              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="@string/first"
                  android:id="@+id/first"
                  android:textColor="@color/white"
                  android:textSize="18sp"
                  android:textAlignment="center"/>

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/help100px"
            tools:ignore="ContentDescription" />
        <TextView
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:text="@string/ask_for_help"
            android:id="@+id/second"
            android:textColor="@color/white"
            android:textSize="18sp"/>

        <ImageButton
            android:id="@+id/imageButton4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/map_96px"
            tools:ignore="ContentDescription" />
        <TextView
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:text="third icon"
            android:id="@+id/thirditem"
            android:textColor="@color/white"
            android:textSize="18sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear2"
        android:layout_width="wrap_content"
        android:weightSum="1"

        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/linear1"
        android:layout_toRightOf="@+id/linear1"
        android:orientation="vertical"
        android:padding="36dp">

        <ImageButton
            android:id="@+id/imageButton6"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/gallery_96px"
            tools:ignore="ContentDescription" />
        <TextView
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:text="fourth"
            android:id="@+id/fourth"
            android:textColor="@color/white"
            android:textSize="18sp"/>
        <ImageButton
            android:id="@+id/imageButton7"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/wikipedia_96px"
            tools:ignore="ContentDescription" />
        <TextView
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:text="wikiSyria"
            android:id="@+id/fifth"
            android:textColor="@color/white"
            android:textSize="18sp"/>
        <ImageButton
            android:id="@+id/imageButton8"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"

            app:srcCompat="@drawable/aboutx"
            tools:ignore="ContentDescription"
            android:onClick="toAboutus"/>
        <TextView
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:text="about us"
            android:id="@+id/aboutusbut"
            android:textColor="@color/white"
            android:textSize="18sp"/>
    </LinearLayout>
</RelativeLayout>
