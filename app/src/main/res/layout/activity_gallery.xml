<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.abu_nadeem.myapplication.gallery"
    android:orientation="vertical"
    android:background="@color/dark">



    <ImageSwitcher
        android:id="@+id/simpleImageSwitcher"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        />



    <Button
        android:id="@+id/buttonNext"
        android:layout_width="50dp"
        android:layout_alignParentRight="true"
        android:layout_height="50dp"
       android:layout_alignBottom="@id/simpleImageSwitcher"
       android:onClick="nxt"
       android:background="@drawable/nxt_64px"

       />
    <Button
        android:layout_width="50dp"
        android:layout_alignParentLeft="true"
        android:layout_height="50dp"
        android:layout_alignBottom="@id/simpleImageSwitcher"
        android:onClick="prev"
        android:background="@drawable/back_64px"

        />
</RelativeLayout>
